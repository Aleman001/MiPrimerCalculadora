<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/contenidoView"
    tools:context=".MainActivity">
    <TabHost
        android:id="@+id/tbhConversores"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/tabCouta"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="#00FFF5 "
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblTitulo"
                        android:text="Cuota a pagar de agua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="30dp"
                        android:textSize="35dp"/>

                    <EditText
                        android:id="@+id/txtcant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblTitulo"
                        android:layout_marginTop="10dp"
                        android:hint="Cantidad" />
                    <TextView
                        android:id="@+id/lblResultado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtcant"
                        android:layout_marginTop="10dp"
                        android:text="Respuesta: ?" />
                    <Button
                        android:id="@+id/btnPrecio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblResultado"
                        android:layout_marginTop="30dp"
                        android:text="Precio" />




                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/tabConversor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/lblDe"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DE: " />
                    <Spinner
                        android:id="@+id/cboDe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:entries="@array/conversorArea" />
                    <TextView
                        android:id="@+id/lblA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cboDe"
                        android:layout_marginTop="20dp"
                        android:text="A: " />
                    <Spinner
                        android:id="@+id/cboA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cboDe"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="20dp"
                        android:entries="@array/conversorArea" />
                    <EditText
                        android:id="@+id/txtcantidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/cboA"
                        android:layout_marginTop="20dp"
                        android:hint="Cantidad" />
                    <TextView
                        android:id="@+id/lblRespuesta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/txtcantidad"
                        android:layout_marginTop="20dp"
                        android:text="Respuesta: ?" />
                    <Button
                        android:id="@+id/btnCalcular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lblRespuesta"
                        android:layout_marginTop="20dp"
                        android:text="Calcular" />
                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
</RelativeLayout>
